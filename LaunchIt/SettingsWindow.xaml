<Window x:Class="LaunchIt.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        Title="SettingsWindow" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".7*"/>
                <ColumnDefinition Width=".3*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Header="Paths">
                <ListBox ItemsSource="{Binding SourcePaths}"></ListBox>
            </GroupBox>
            <GroupBox Header="Types" Grid.Column="2">
                <ListBox ItemsSource="{Binding SourceTypes}"></ListBox>
            </GroupBox>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button>Save</Button>
            <Button Command="{Binding ReScanIndexCommand}">Rebuild Index</Button>
            <Button>Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
